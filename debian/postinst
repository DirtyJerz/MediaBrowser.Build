#!/bin/sh
# postinst script for mediabrowser
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
PROGRAMDATA=/var/lib/mediabrowser

case "$1" in
    configure)
    # create mediabrowser group if it does not exist
    if ! getent group mediabrowser > /dev/null; then
        addgroup --quiet --system mediabrowser
    fi
    
    # create mediabrowser user if it does not exist
    if ! getent passwd mediabrowser > /dev/null; then
        adduser --system --ingroup mediabrowser --home /var/lib/mediabrowser mediabrowser \
            --gecos "MediaBrowser Server default user"
    fi
    # ensure /var/lib/mediabrowser has appropriate permissions
    [ ! -d /var/lib/mediabrowser ] && mkdir /var/lib/mediabrowser
    chown -R mediabrowser:mediabrowser /var/lib/mediabrowser
    # ensure app path ahs appropriate permissions
    chown -R mediabrowser:mediabrowser /opt/mediabrowser
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
